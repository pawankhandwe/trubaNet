@model BlogManagmentSystem.Models.Blog

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Are you sure you want to delete this?</h3>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
                        <dt class="col-sm-3">Content</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
